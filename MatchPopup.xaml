<?xml version="1.0" encoding="utf-8" ?>
<ct:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ct="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
             x:Class="Tichu_Counter.MatchPopup"
             Color="Transparent"
             
             Opened="Popup_Opened"
             Closed="Popup_Closed"
                >
    <Border BackgroundColor="#FFFFFD" Stroke="#E5E5E5" StrokeThickness="1">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="15" />
        </Border.StrokeShape>
        <VerticalStackLayout Spacing="15" Padding="20" x:Name="popup">
            <Label Text="A match without recorded rounds already exists. Do you wish to delete it?" HorizontalTextAlignment="Center" TextColor="Black"/>
            <HorizontalStackLayout Spacing="15" HorizontalOptions="Center" HeightRequest="40">
                <Button x:Name="Cancel_button" HorizontalOptions="Center" VerticalOptions="Center" Clicked="Cancel" Text="Cancel" CornerRadius="12" FontSize="14" FontFamily="InterBold" FontAttributes="Bold" BorderWidth="1" BorderColor="#6c63fe" BackgroundColor="#FFFFFF" TextColor="#6c63fe"/>
                <Button x:Name="Accept_button" HorizontalOptions="Center" Clicked="Accept" WidthRequest="79" Text="Delete" CornerRadius="12" FontSize="14" FontFamily="InterBold" FontAttributes="Bold" BorderWidth="1" BackgroundColor="#fc3d39" TextColor="White"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Border>
</ct:Popup>